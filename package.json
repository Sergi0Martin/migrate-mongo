{
  "name": "mongo-migrator",
  "version": "1.0.0",
  "description": "A database migration tool for MongoDB using Node.js",
  "scripts": {
    "start:update-database": "npx tsx src/mongo-migrator.ts update-database",
    "lint": "npx eslint .",
    "format": "prettier --write ."
  },
  "author": "Sergio Martin",
  "license": "MIT",
  "keywords": [
    "migrate mongo mongodb migrations database"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Sergi0Martin/migrate-mongo"
  },
  "engines": {
    "node": ">=8"
  },
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "outDir": "out",
    "sourceMap": true
  },
  "dependencies": {
    "@types/node": "^22.10.1",
    "commander": "^12.1.0",
    "dotenv": "^16.4.7",
    "mongodb": "^6.11.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "eslint": "^9.16.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.17.0"
  }
}
